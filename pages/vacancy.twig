		<!-- Main Page -->
		<main>
        <div class="d-none" data-pagetitle="{{resource.pagetitle}}"></div>
			<div id="fullpage">
				<section>
					<div class="section">


						<div class="job game-job" style="min-height:100vh">
							<div class="container">
								<div class="job__main">
									<div class="job__header">
										<div class="job__head">Дата</div>
										<div class="job__head">Вакансия</div>
										<div class="job__head">Отдел</div>
										<div class="job__head">Условия оплаты труда</div>
										<div class="job__head">Вакансия
											<br>
											на площадках</div>
									</div>
									<!-- Accordion -->
									<div class="accordion">
										<div class="accordion__item active" data-accordion-item>
											<div class="accordion__header">
												<div class="accordion__header-time">{{ resource['date'] |date("d.m.Y") }}</div>
												<div class="accordion__header-vakanci">{{ resource['dotatitle'] }}</div>
												<div class="accordion__header-department">{{ resource['department'] }}</div>
												<div class="accordion__header-pay">{{ resource['pay'] }}</div>
												<div class="accordion__header-other">
													{% if resource['hh_link'] is not empty %}
														<a class="accordion__header-other-logo" href="{{ resource['hh_link'] }}"><img src="templates/img/hh.svg" alt="in"></a>
													{% endif %}
													{% if resource['in_link'] is not empty %}
														<a class="accordion__header-other-logo" href="{{ resource['in_link'] }}"><img src="templates/img/in.svg" alt="in"></a>
													{% endif %}
													<div class="accordion__header-click">
														<a href="#" id="moveSectionDown" class="accordion__header-btn2">
															Оставить отклик
														</a>
														{#<a class="accordion__header-link" href="#">Рекомендовать другу</a>#}
													</div>
												</div>
											</div>
											<div class="accordion__content">
												<div class="accordion__content-top">
													<div class="accordion__content-condition">
														<div class="accordion__content-label">
															Особые условия
														</div>
														<ol>
															{{ resource['special'] | raw}}
{% if resource.teststudy is defined and resource.teststudy %}
  <li style="  list-style-type: none;">Требуется выполнение <a href="{{resource.teststudy}}" download class="teststudy">тестового задания</a></li>
{% endif %}
														</ol>
													</div>
													      <div class="accordion__content-adaptive ">
															<div class="accordion__content-label">
															Вакансии на ресурсах
															</div>
															<div class="accordion__content-vacancy">
															{% if data['tv.hh_link'] is not empty %}
															<a href="{{ data['tv.hh_link'] }}"><img src="templates/img/hh.svg" alt="in"></a>
															{% endif %}
															{% if data['tv.in_link'] is not empty %}
															<a href="{{ data['tv.in_link'] }}"><img src="templates/img/in.svg" alt="in"></a>
															{% endif %}
														</div>
														</div>
													<div class="accordion__content-lavel">
														<div class="accordion__content-label">
															Уровень знаний
														</div>
														<div class="accordion__content-rang">{{ resource['rang'] }}</div>
													</div>
												</div>
												<div class="accordion__content-bottom">
													<div class="accordion__content-column">
														<h5 class="accordion__content-title">
															Обязанности
														</h5>
														<ul class="accordion__content-list">
															{% set duties = (resource['duties'] | json) %}
															{% for item in duties.fieldValue %}
																<li class="accordion__content-item">
																	{{ item.value }}
																</li>
															{% endfor %}
														</ul>
													</div>
													<div class="accordion__content-column">
														<h5 class="accordion__content-title">
															Требования
														</h5>
														<ul class="accordion__content-list">
															{% set requirements = (resource['requirements'] | json) %}
															{% for item in requirements.fieldValue %}
																<li class="accordion__content-item">
																	{{ item.value }}
																</li>
															{% endfor %}
														</ul>
													</div>
													<div class="accordion__content-links">
														<a href="#" class="accordion__header-btn">
														Оставить отклик
														</a>
														<div class="accordion__content-txt">или напишите напрямую руководителяю</br>подразделения</div>
														<a href="#"><img src="templates/img/telegram.svg" alt=""></a>
													</div>
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>

				</section>
				<section>
					<div class="section">
						<div class="footer-form footer-form-game">
							<div class="container">
								<div class="footer-form__inner">
									<div class="footer-form__top">
										<div class="footer-form__top-label">
											Свяжитесь с нами
										</div>
										<h4 class="footer-form__title">
											Простая форма для большого
											<br>
											шага вперед!
										</h4>
									</div>
									<div class="footer-form__main">
										{% if resource.teststudy is defined and resource.teststudy %}
											<div class="footer-form__main">
												{{ runSnippet('Form', {
            formid: 'feedback',
            path: '/templates/partials/forms/withfile/',
            extension: 'twig',
            to: 'jacov911@ya.ru',
        }) | raw }}
											</div>
										{% else %}
											<div class="footer-form__main">
												{{ runSnippet('Form', {
            formid: 'feedback',
            path: '/templates/partials/forms/withoutfile/',
            extension: 'twig',
            to: 'jacov911@ya.ru',
        }) | raw }}
											</div>
										{% endif %}
									</div>
								</div>
							</section>
						</div>
					</div>
				</div>
			</div>
			<script>
				window.onload = function () {
new fullpage('#fullpage', {
// options here
// autoScrolling: true,
// scrollHorizontally: true,
sectionSelector: '.section',
anchors: [
'vacancy-char', 'lastPage'
],
licenseKey: 'gplv3-license'
});
fullpage_api.setAllowScrolling(false);
document.querySelector('#moveSectionDown').addEventListener('click', function (e) {
e.preventDefault();
fullpage_api.moveSectionDown();
});
};

document.addEventListener("DOMContentLoaded", function() {
  var vacancyInput = document.querySelector(".input.vacancy");
  var pageTitleElement = document.querySelector("[data-pagetitle]");

  if (vacancyInput && pageTitleElement) {
    var pageTitle = pageTitleElement.getAttribute("data-pagetitle");
    vacancyInput.value = pageTitle;
    vacancyInput.readOnly = true; // Делаем поле ввода нередактируемым
  }
});

			</script>
		{% endblock %}

